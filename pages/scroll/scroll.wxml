<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动 -->
<scroll-view class='container1' scroll-x>
  <view wx:for="{{10}}" class='item1'>{{item}}</view>
</scroll-view>

<!-- 2.水平滚动 -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" class = 'item2'>
    {{item}}
  </view>
</scroll-view>


<!-- 3.其他补充 -->
<scroll-view 
  class="container3" 
  scroll-y 
  bindscroll="handleTap">
  <view wx:for="{{10}}" class='item3'> {{item}}</view>
</scroll-view>
<!-- 查看组件的容器的scrol-view -->